{
  "name": "avett-rx-tutorial",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p types:watch next:dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*\"",
    "schema:update": "./scripts/update-schema.sh",
    "next:dev": "next dev",
    "prebuild": "yarn types:build",
    "types:build": "DOTENV_CONFIG_PATH=./.env.local graphql-codegen --config codegen.yml -r dotenv/config",
    "types:watch": "yarn types:build --watch",
    "storybook:run": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@chakra-ui/react": "^1.0.0",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "framer-motion": "^2.9.4",
    "graphql": "^15.4.0",
    "next": "10.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@graphql-codegen/cli": "^1.19.0",
    "@graphql-codegen/introspection": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.7",
    "@storybook/addon-actions": "^6.1.2",
    "@storybook/addon-essentials": "^6.1.2",
    "@storybook/addon-links": "^6.1.2",
    "@storybook/react": "^6.1.2",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.1",
    "cross-fetch": "^3.0.6",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest-dom": "^3.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": ">=4",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "vercel": "^20.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{css,md,ts,tsx}": "prettier --write"
  }
}
